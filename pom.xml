    <!--
    | Project Information
    -->

    <name>IntelliJ &gt; Plugin &gt; Tests Runner</name>
    <description>Plugin IntelliJ pour lancer des tests release</description>
    <inceptionYear>2003</inceptionYear>

    <build>
        <!--AjoutÃ© pour que le plugin idea et le build maven marchent tous les deux -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/resources-filtered</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>ideauidesigner-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-idea-plugin</artifactId>
                <version>2.1</version>
                <!-- generating a plugin only works since 2.1-SNAPSHOT -->
                <configuration>
                    <ideaPlugin>true</ideaPlugin>
                    <jdkName>IDEA IU-107.322</jdkName>
                    <dependenciesAsLibraries>true</dependenciesAsLibraries>
                    <libraries>
                        <library>
                            <name>idea-annotations</name>
                            <exclude>true</exclude>
                        </library>
                        <library>
                            <name>idea-jdom</name>
                            <exclude>true</exclude>
                        </library>
                        <library>
                            <name>idea</name>
                            <exclude>true</exclude>
                        </library>
                        <library>
                            <name>idea-trove4j</name>
                            <exclude>true</exclude>
                        </library>
                        <library>
                            <name>idea-util</name>
                            <exclude>true</exclude>
                        </library>
                        <library>
                            <name>idea-extensions</name>
                            <exclude>true</exclude>
                        </library>
                        <library>
                            <name>idea-openapi</name>
                            <exclude>true</exclude>
                        </library>
                    </libraries>
                </configuration>
            </plugin>
        </plugins>
    </build>

